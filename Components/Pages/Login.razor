@page "/"
@page "/login"
@layout Layout.CustomLayout
@inject NavigationManager NavigationManager

<PageTitle>Signin</PageTitle>

<style>
    .signin-body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .form-signin img {
        margin-bottom: 20px;
        border-radius: 50%;
    }

    .form-signin h1 {
        font-size: 24px;
        margin-bottom: 10px;
        font-weight: 500;
    }

    .form-signin label {
        margin-bottom: 5px;
        font-size: 14px;
        color: #333;
    }

    .form-signin .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .form-signin .checkbox {
        margin-bottom: 15px;
    }

    .form-signin .btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

    .form-signin .btn:hover {
        background-color: #0056b3;
    }

    .form-signin .text-muted {
        font-size: 14px;
        color: #6c757d;
        text-align: center;
    }
</style>

<div class="text-center signin-body">
    <div class="form-signin">
        <img class="mb-4" src="logo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" @bind="Email" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" @bind="Password" placeholder="Password" required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="button" @onclick="HandleLogin">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </div>
</div>

<button @onclick="Clear">Clear all codes</button>


@code {
    private string? Email { get; set; }
    private string? Password { get; set; }

    private void Clear(){
        Email = "";
            Password = "";
    }

    private void HandleLogin()
    {
        Email = "admin@st.umat.edu.gh";
        Password = "admin";
        if (Email == "admin@umat.edu.gh" && Password == "umat")
        {
            NavigationManager.NavigateTo("/home");
        }
        else{
            Email = "";
            Password = "";
        }
    }
}